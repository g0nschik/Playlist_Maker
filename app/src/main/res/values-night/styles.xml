<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="backButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="TrackNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ArtistNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="SeparatorStyle">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="AlertTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="UpdateButton">
        <item name="android:textAlignment">center</item>
        <item name="background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>