<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="backButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="TrackNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ArtistNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="SeparatorStyle">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="AlertTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="RegularButtonStyle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="PlayerTrackNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">25.78sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>
    <style name="PlayerArtistNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">16.41sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="PlayerTrackInfoRight">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineHeight">15.24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
    </style>


</resources>